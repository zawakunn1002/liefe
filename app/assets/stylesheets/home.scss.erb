.top-image {
    width: 100%;
    background: image-url('top.jpg');
}

.top {
    background-color:rgba(255,255,255,0.8);
    border-radius: 20px;
    margin: 100px 20px 100px 0;
    width: 445px;
    height: 300px;
}

.top-title {
  text-align: center;
  font-family: 'Noto Sans JP', sans-serif;
  padding-top: 20px;
}

.btn-circle-fishy {
  display: inline-block;
  text-decoration: none;
  color: #FFF;
  width: 110px;
  height: 110px;
  line-height: 110px;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  background-image: linear-gradient(45deg, #709dff 0%, #91fdb7 100%);
  transition: .4s;
}

.btn-circle-fishy:hover {
  -webkit-transform: rotate(10deg);
  transform: rotate(10deg);
}

#roop {
    width: 100%;
    background: image-url('photo12.jpg') repeat-x;
    background-position: 0 0;
    -webkit-animation: bgroop 30s linear infinite;
    animation: bgroop 40s linear infinite;
}
@-webkit-keyframes bgroop {
    from {
        background-position: 0  0;
    }
    to {
        background-position: -1478px 0;
    }
}
@keyframes bgroop {
    from {
        background-position: 0 0;
    }
    to {
        background-position: -1478px 0;
    }
}

.text {
  background-color:rgba(255,255,255,0.7) ;
  margin: 20px 0 20px 0;
  border-radius: 20px;

}

.about-text-title {
    text-align: center;
    padding-top: 10px;
}

.about-text-main {
    -ms-writing-mode: tb-rl;
    padding: 20px 30px;

}

.about-text-login {
  -ms-writing-mode: tb-rl;
  padding: 20px 10px;
}

.faq {
  margin-bottom: 80px;
}

#faq-list {
  width: 500px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
}

/*アコーディオン追加 */
.faq-list-item {
  margin:10px;
  border-bottom:1px solid #ccc;
  position:relative;
  cursor:pointer;
  text-align: left;
}

.faq-list-item h3 {
  font-size: 14px;
}

.faq-list-item span {
  position:absolute;
  top:0;
  right:5px;
  color:#ccc;
  font-size:13px;
}

.answer {
  font-size: 12px;
  display: none;
  padding: 5px 0px;
  margin-bottom: 15px;
}



.sign-up-image {
  background: image-url('sign-up.jpg');
  background-size: cover;
  background-position: center;
  width: 100%;
}

.sign-up-back {
  margin: 80px auto;
  padding: 30px;
  border-radius: 20px;
  background-color: rgba(255,255,255,0.8);
}

.log-in-image {
  background: image-url('log-in.jpg');
  background-size: cover;
  background-position: center;
  width: 100%;
}

.log-in-back {
  margin: 85px auto;
  padding: 30px;
  border-radius: 20px;
  background-color: rgba(255,255,255,0.7);
}

@media screen and (max-width:425px) {
  .top-image {
    background-size: cover;
    height: 100vh;
}

.top {
  margin: 150px 50px 0 20px;
}

.top-title {
  display: none;
}

a.btn-circle-fishy{
  display: block;
  width: 90px;
  height: 90px;
  line-height: 90px;
  margin: 5px;
}

.text {
  width: 290px;
}
.faq {
  margin: 0 auto 80px auto;
}

#faq-list {
  width: 90%;
}

.sign-up-image{
  height: 100vh;
}

.log-in-image {
    height: 100vh;
  }
}

