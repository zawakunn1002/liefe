#flipbook {
	  width: 736px;
  	height: 500px;
  	background-size: 100% 100%;
  	margin: 0 auto;
}

#responsive-book {
  display: none;
}

.top-box1 {
  background-color: white;
  width: 100%;
}

.top-box2 {
  width: 100%;
  height: 500px;
  opacity: 0.3;
}

.top-box3 {
  width: 100%;
  height: 500px;
  border:2px solid #bbb;
    writing-mode: vertical-rl;
    -ms-writing-mode: tb-rl;
    text-orientation: upright;
    font-size: 21px;
}

.text-box {
  background-color: white;
  border:2px solid #bbb;
    writing-mode: vertical-rl;
    -ms-writing-mode: tb-rl;
    text-orientation: upright;
    font-size: 19px;
}

.end-box1 {
  background-color: white;
  border:2px solid #bbb;
    writing-mode: vertical-rl;
    -ms-writing-mode: tb-rl;
    text-orientation: upright;
    font-size: 21px;
}

.end-box2 {
  width: 100%;
  height: 500px;
  opacity: 0.3;
}

.end-box3 {
  width: 100%;
  height: 500px;
  background-color: rgba(255,255,255,0.7);
  border:2px solid #bbb;
  writing-mode: vertical-rl;
  -ms-writing-mode: tb-rl;
    text-orientation: upright;
    font-size: 21px;
}

.show-title {
	position: absolute;
  	top: 20%;
  	left: 49%;
  	font-size: 30px;
  	width: 0%;
}

.auther {
  position: absolute;
    top: 45%;
    left:3%;
    font-size: 20px;
}

#top-btn {
  display: none;
}

.story-index {
  display: none;
}

.story-index2 {
  display: none;
}

.auther-link {
  color: black;
}

.auther-link:hover {
  color: black;
}

@media screen and (max-width: 820px) {
  .top-text {
    display: none;
  }

   #flipbook {
    display: none;
  }

  .responsive-top-text {
    display: none;
  }

  #responsive-book {
    display: block;
  }

   .responsive-title {
    text-align: center;
  }
  .responsive-name {
    text-align: right;
  }

  #top-btn {
    display: block;
    margin-top: 6px;
  }

  .form-image {
    display: none;
  }

  .Notes:nth-child(3) {
    display: none;
  }

  .Notes:nth-child(4) {
    display: none;
  }
}

@media screen and (max-width:425px) {
  .index-image {
    width: 75px;
    height: 75px;
  }



}