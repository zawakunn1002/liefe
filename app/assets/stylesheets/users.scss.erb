.user-story-title {
	margin: 20px 0;
}

.user-favorites-title {
	margin: 20px 0;
}

.edit-image {
	background: image-url("/images/user-edit.jpg");
	background-size: cover;
	background-position: center;
	height: 100vh;
}

.edit-title {
	margin: 40px 0 20px 0;
}

.edit-form {
	line-height: 40px;
	margin-bottom: 30px;
}


@media screen and (max-width:1024px) {
	.edit-form {
		line-height: 50px;
	}
}

@media screen and (max-width:812px) {
	.edit-title {
		margin: 5px 0;
	}

	.edit-form {
		line-height: 20px;
	}
}

@media screen and (max-width:768px) {
	.edit-title {
		margin: 200px 0 30px 0;
	}
}

@media screen and (max-width:736px) {
	.edit-title {
		margin: 25px 0 10px 0;
	}
}

@media screen and (max-width: 588px) {
	.edit-title {
		margin: 20px 0 10px 0;
	}
	.edit-form {
		line-height: 30px;
	}
}
@media screen and (max-width:425px) {
	.index-image {
		width: 75px;
		height: 75px;
	}

	.show-image {
		width: 75px;
		height: 75px;
	}

	.back-image {
		height: 100vh;
	}

	.edit-title {
		margin: 10px 0 40px 0;
	}

	.edit-form {
		line-height: 40px;
	}
}

