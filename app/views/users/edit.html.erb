<div class="container-fluid">
	<div class="edit-image">
		<div class="row">
			<div class="col-lg-12 col-xs-12">
				<div class="d-flex justify-content-center">
					<h2 class="edit-title"> プロフィール編集</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 col-xs-12">
				<div class="d-flex justify-content-center">
					<% if @user.errors.any? %>
					<p style="color: red; margin: 0 30px">
						編集に失敗しました。
						ペンネーム、Eメールの記入漏れに
						注意してください
					</p>
					<% end %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-11 offset-1">
				<div class="d-flex justify-content-center">
					<div class="edit-form">
		  	  			<%= form_for(@user) do |f| %>
		  	  				<h5>ペンネーム</h5>
		  	   			<%= f.text_field :name %><br>
		  	  				<h5> Eメールアドレス</h5>
	                    <%= f.email_field :email %>
	                    	<h5>プロフィール画像</h5>
		  	  			<%= f.attachment_field :profile_image, id: "file" %><br>
		  	  			<!-- プレビュー画像表示 -->
		  	  			<canvas id="cvs1" width="100" height="100"></canvas>
		  	  			<!-- 本人のブログやgithubなどのurlを書くことができる欄 -->
		  	  				<h5>その他URL(ブログなど)</h5>
		  	  			<%= f.text_field :url %><br>
		  	  			<%= f.submit "更新" %>
		  	  			<% end %>
		  	  		</div>
				</div>
			</div>
		</div>
	</div>
</div>
