<div class="container">
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-center">
				<h2> プロフィール編集</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			<div class="d-flex justify-content-center">
  	  			<%= form_for(@user) do |f| %>
  	  				<p>ニックネーム</p>
  	   			<%= f.text_field :name %><br>
  	  				<p>プロフィール画像</p>
  	  			<%= f.attachment_field :profile_image %><br>
  	  			<%= f.submit "更新" %>
  	  			<% end %>
			</div>
		</div>
	</div>
</div>
