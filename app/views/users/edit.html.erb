<div class="container-fluid">
	<div class="back-image">
		<div class="row">
			<div class="col-lg-12 col-xs-12">
				<div class="d-flex justify-content-center">
					<h2 style="margin: 60px 0 30px 0;"> プロフィール編集</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-11 offset-1">
				<div class="d-flex justify-content-center" style="line-height: 40px; margin-bottom: 30px;">
	  	  			<%= form_for(@user) do |f| %>
	  	  				<h5>ペンネーム</h5>
	  	   			<%= f.text_field :name %><br>
	  	  				<h5> Eメールアドレス</h5>
                    <%= f.email_field :email %>
                    	<h5>プロフィール画像</h5>
	  	  			<%= f.attachment_field :profile_image %><br>
	  	  			<%= f.submit "更新" %>
	  	  			<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
